<p id="notice"><%= notice %></p>
<div class="col-md-12">
   <div class="panel panel-primary">
      <div class="panel-heading">
         <h1 class="panel-title">Lista de Edificios </h1>
      </div>
      <div class="panel-body">
        <div class="table-responsive">
         <table id="tabla" class="table table-bordered table-hover table-striper table-condensed" width="100%">
            <thead>
              <tr>
                  <th>Nombre del Edificio</th>
                  <th>Nombre Propietario</th>
                  <th>Direcci√≥n</th>
                  <th></th>
                  <th></th>
                  <th></th>
               </tr>
            </thead>
            <tbody>
               <% @edificios.each do |edificio| %>
               <tr>
                  <td class="text-uppercase"><%= edificio.nombre_edificio %></td>
                  <td class="text-uppercase"><%= edificio.nombre_propietario %></td>
                  <td class="text-uppercase"><%= edificio.direccion %></td>
                  <td><%= link_to glyph(:eye_open)+'', edificio %></td>
                  <td><%= link_to glyph(:pencil)+'', edit_edificio_path(edificio) %></td>
                  <td><%= link_to glyph(:remove)+'', edificio, method: :delete, data: { confirm: 'ESTAS SEGURO?' } %></td>
               </tr>
               <% end %>
            </tbody>
         </table>
       </div>
      </div>
   </div>
</div>
